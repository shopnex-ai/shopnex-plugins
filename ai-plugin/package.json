{
  "name": "@shopnex/ai-plugin",
  "version": "1.0.0",
  "private": false,
  "bugs": "https://github.com/ashbuilds/payload-ai/issues",
  "repository": "https://github.com/ashbuilds/payload-ai",
  "license": "MIT",
  "author": "ArseniyDev",
  "keywords": [
    "plugin",
    "text-to-speech",
    "ai",
    "text-generation",
    "text-to-image",
    "content-generation",
    "ai-writing",
    "payloadcms",
    "smart-generation",
    "ai-translate",
    "ai-writing-tool",
    "gpt-image-1"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/exports/client.js",
      "types": "./dist/exports/client.d.ts",
      "default": "./dist/exports/client.js"
    },
    "./fields": {
      "import": "./dist/exports/fields.js",
      "types": "./dist/exports/fields.d.ts",
      "default": "./dist/exports/fields.js"
    },
    "./types": {
      "import": "./dist/exports/types.js",
      "types": "./dist/exports/types.d.ts",
      "default": "./dist/exports/types.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths --copy-files",
    "build:dev": "pnpm build --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "prepublishOnly": "pnpm clean && pnpm build"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.10",
    "@ai-sdk/openai": "^1.3.21",
    "@ai-sdk/provider-utils": "^2.2.7",
    "@ai-sdk/react": "^1.2.11",
    "@ai-sdk/ui-utils": "^1.2.10",
    "@anthropic-ai/sdk": "^0.40.1",
    "ai": "^4.3.13",
    "ajv": "^8.17.1",
    "elevenlabs": "^0.8.2",
    "get-input-selection": "^1.1.4",
    "handlebars": "4.7.8",
    "handlebars-async-helpers": "^1.0.6",
    "locale-codes": "^1.3.1",
    "lodash.isequal": "^4.5.0",
    "openai": "^4.97.0",
    "react-mentions": "^4.4.10",
    "scroll-into-view-if-needed": "^3.1.0",
    "textarea-caret": "^3.0.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.9.1",
    "@swc/cli": "0.4.0",
    "@types/dot-object": "2.1.6",
    "@types/handlebars": "^4.1.0",
    "@types/json-schema": "^7.0.15",
    "@types/react": "npm:types-react@19.0.0-beta.2",
    "@types/react-dom": "npm:types-react-dom@19.0.0-beta.2",
    "@types/react-mentions": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "copyfiles": "2.4.1",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "rimraf": "6.0.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.18.0"
  },
  "peerDependencies": {
    "@lexical/html": "^0.28.0",
    "@payloadcms/richtext-lexical": "^3.31.0",
    "@payloadcms/translations": "^3.31.0",
    "@payloadcms/ui": "^3.31.0",
    "lexical": "^0.28.0",
    "payload": "^3.31.0"
  },
  "publishConfig": {
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "@ai-stack:registry": "https://registry.npmjs.org",
    "access": "public",
    "provenance": true,
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./types": {
        "import": "./dist/exports/types.js",
        "types": "./dist/exports/types.d.ts",
        "default": "./dist/exports/types.js"
      },
      "./fields": {
        "import": "./dist/exports/fields.js",
        "types": "./dist/exports/fields.d.ts",
        "default": "./dist/exports/fields.js"
      },
      "./client": {
        "import": "./dist/exports/client.js",
        "types": "./dist/exports/client.d.ts",
        "default": "./dist/exports/client.js"
      }
    }
  }
}
