{
    "name": "create-shopnex-app",
    "version": "1.0.4",
    "description": "CLI to set up the Shopnex e-commerce platform",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "create-shopnex-app": "./dist/index.js"
    },
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "nodemon --watch src --ext ts --exec \"pnpm build && node dist/index.js\"",
        "clean": "rimraf {dist,*.tsbuildinfo}",
        "prepublishOnly": "pnpm clean && pnpm build"
    },
    "keywords": [
        "cli",
        "shopnex",
        "ecommerce"
    ],
    "author": "ArseniyDev <aaarse7@gmail.com>",
    "license": "MIT",
    "packageManager": "pnpm@10.7.1",
    "dependencies": {
        "chalk": "^5.4.1",
        "figlet": "^1.8.1",
        "gradient-string": "^3.0.0",
        "inquirer": "12.3.3",
        "ora": "^8.2.0",
        "simple-git": "^3.27.0"
    },
    "devDependencies": {
        "@types/figlet": "^1.7.0",
        "@types/gradient-string": "^1.1.6",
        "@types/inquirer": "^9.0.7",
        "@types/node": "^22.5.4",
        "concurrently": "^9.1.2",
        "nodemon": "^3.1.9",
        "typescript": "^5.8.3"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}